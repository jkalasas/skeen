{
	"$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
	"productName": "Skeen",
	"version": "1.0.0",
	"identifier": "dev.skeen",
	"build": {
		"frontendDist": "../build",
		"devUrl": "http://localhost:5173",
		"beforeDevCommand": "bun run dev",
		"beforeBuildCommand": "bun run tauri icon src-tauri/icons/icon.png && bun run build:tauri"
	},
	"app": {
		"windows": [
			{
				"title": "Skeen",
				"label": "main",
				"width": 1200,
				"height": 800,
				"minWidth": 800,
				"minHeight": 600,
				"resizable": true,
				"fullscreen": false,
				"center": true,
				"visible": false
			},
			{
				"label": "splashscreen",
				"url": "splashscreen.html",
				"width": 400,
				"height": 300,
				"decorations": false,
				"center": true,
				"resizable": false,
				"alwaysOnTop": true
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		],
		"category": "Utility",
		"shortDescription": "Skincare product assessment tool",
		"longDescription": "Skeen helps you assess skincare products using AI-powered analysis."
	},
	"plugins": {
		"opener": {},
		"deep-link": {
			"desktop": {
				"schemes": ["skeen"]
			},
			"mobile": [
				{
					"scheme": ["skeen"],
					"appLink": false
				}
			]
		}
	}
}
